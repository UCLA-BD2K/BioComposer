<!DOCTYPE html>
<html>
  <head>
    <title>Change Password</title>
    <link rel='stylesheet' href='stylesheets/style.css'/>
    <link rel='stylesheet' href='stylesheets/fonts.css'/>
    <link rel='stylesheet' href='stylesheets/reset_pass.css'/>
  </head>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script type="text/javascript" src='javascripts/login_front.js'></script>
    <body>
    <div id="navbar">
        <p id="nav_title"><a href='/'>HeartBD2K @ UCLA</a></p>
        <div style="width: 450px; float: right;" id="login_forms_or_greeting">
        <% if (!user){ %>
        <p style="position: absolute; text-align: right; float: right; top: 32px; right: 340px; font-size: 10px" class="error"><% if (error.length != 0) { %>*<%= error %> <% } %></p>
        <form action='/auth' method="post" id="login" name="login">
        <input type="text" class="input_blur" onfocus="selectInput(this, 'username')" onblur="deselectInput(this, 'username')" name="username" value="username">
        </input>
        <input type="text" class="input_blur" onfocus="selectInput(this, 'password')" onblur="deselectInput(this, 'password')" name="password" value="password">
        </input>
        <button>Log-in</button>
        <p><a href='/password_reset' id='password_forgot'>Forgot password?</a></p>
        <% } %>
        <% if (user) { %>
        <p id="greeting">Welcome, <%= user.firstname %> <a href='/logout'>(logout)</a></p>
        <% }%>
        </div>
        </form>
    </div>
    <div id="main_content">
        <div class='style_a' id="reset_container" style="height: 320px">
        <h1>Change Password</h1>
        <form action='/submit_password_change' method="post" name='reset_pass'>
            <input type="text" class='input_blur form_input' name='password' value='Enter a password' onfocus="selectInput(this, 'Enter a password')" onblur="deselectInput(this, 'Enter a password')"></input>
            <input type="text" class='input_blur form_input' name='password2' value='Confirm password' style='margin-top: 15px' onfocus="selectInput(this, 'Confirm password')" onblur="deselectInput(this, 'Confirm password')"></input>
            <br>
            <input type="hidden" name="email" value="<%= email %>"></input>
            <input type="hidden" name="hash" value="<%= hash %>"></input>
            <input id='reset' style='width: 155px; border-radius: 10px; left: 190px;' type='submit' class='button' value="Change Password"></div>
        </form>
        <p id='email_err' class='error' style='position: relative; left: -30px; bottom: 80px'><% if (typeof err != "undefined"){%><%= err %><%}%></p>
        
        </div>
    </div>
    </body>
