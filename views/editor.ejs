<!DOCTYPE html>
<html>
  <head>
    <title>GeneWiki</title>
    <link rel='stylesheet' href='stylesheets/style.css'/>
    <link rel='stylesheet' href='stylesheets/fonts.css'/>
    <link rel='stylesheet' href='stylesheets/editor.css'/>
  </head>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script type="text/javascript" src='javascripts/login_front.js'>
    </script>
    <script type="text/javascript">
        
        //Functions for extending side panel
        var mouse_pos_x; 
        var width;
        
        $(document).ready(function(){
            $("#extend_div").mousedown(function (e) {
                e.preventDefault();
                $(document).css('cursor', 'ew-resize');
                width = $("#content_panel").width();
                console.log(width);
                mouse_pos_x = e.pageX;   
    
                $(document).mousemove(function (e) {
                    if ($("#content_panel").width()>360 || (e.pageX - mouse_pos_x)>0)
                        $("#content_panel").width(width + e.pageX - mouse_pos_x);
                    else
                        $("#content_panel").width(360);

                });
            }).mouseup(function () {
                $(document).unbind('mousemove');
            });
        });
        
        
        
        
        function extend(e, obj)
        {
            $(obj).width(width + e.pageX - mouse_pos_x);
            console.log(e.pageX - mouse_pos_x);
        }
        //-----------------------
        
        function tabClick(obj){
            $(obj).addClass('tabs-click');
            if (obj.id == 'pubmed')
            {
                $('#google_scholar').removeClass('tabs-click');
                $('#pubmed').addClass('pubmed-click')
            }
            else
            {
                $('#pubmed').removeClass('tabs-click');
                $('#pubmed').removeClass('pubmed-click')
            }
        }
    </script>
    <body>
    <div id="navbar">
        <p id="nav_title"><a href='/'>HeartBD2K @ UCLA</a></p>
        <div style="width: 450px; float: right;" id="login_forms_or_greeting">
        <% if (!user){ %>
        <p style="position: absolute; text-align: right; float: right; top: 32px; right: 340px; font-size: 10px" class="error"><% if (error.length != 0) { %>*<%= error %> <% } %></p>
        <form action='/auth' method="post" id="login" name="login">
        <input type="text" class="input_blur" onfocus="selectInput(this, 'username')" onblur="deselectInput(this, 'username')" name="username" value="username">
        </input>
        <input type="text" class="input_blur" onfocus="selectInput(this, 'password')" onblur="deselectInput(this, 'password')" name="password" value="password">
        </input>
        <button>Log-in</button>
        <p><a href='/password_reset' id='password_forgot'>Forgot password?</a></p>
        <% } %>
        <% if (user) { %>
        <p id="greeting">Welcome, <%= user.firstname %> <a href='/logout'>(logout)</a></p>
        <nav>
            <a>Home</a> |
            <a>Profile</a> |
            <a>Docs</a>
        </nav>
        <% }%>
        </div>
        </form>
    </div>


    <div id="main_content">
        <div id="content_panel">
            <div id="extend_div">
            </div>
            <div id="search">
                <form method='post' id='search_form' name='search'>
                    <input type='text' value='Search Publications' id='search_bar' class="input_blur" onfocus="selectInput(this, 'Search Publications')" onblur="deselectInput(this, 'Search Publications')"></input>
                <img id="mag_glass" src="../images/search_glass.png"/>
                </form>
            </div>
            <div id="search_content">
                <div id='tabs_container'>
                    <div class='tabs' id='google_scholar' onclick='tabClick(this)' style="float: left;">
                        <p>GoogleScholar</p>
                    </div>
                    <div class='tabs' id='pubmed' onclick='tabClick(this)' style="float: right;">
                        <p>PubMed</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="editor_window">
            <div id="toolbar">
                <img id='save' src="../images/save.png" style="right: 100px;" />
                <img id='download' src="../images/download.png" style="right: 50px" />
            </div>
            <div id="editor">
            </div>
        </div>
        
    </div>
    </body>
